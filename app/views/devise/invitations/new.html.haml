= form_for(Employee.new, url: invitation_path(:employee), format: :json, remote: true) do |f|
  .form-group
    = f.label :first_name
    = f.text_field :first_name, class: 'form-control', required: true
  .form-group
    = f.label :last_name
    = f.text_field :last_name, class: 'form-control', required: true
  .form-group
    = f.label :role
    = f.select :role, roles_for_select, {}, class: 'form-control', include_blank: false
  .form-group
    = f.label :department
    = f.select :department_id, departments_for_select, { selected: current_employee.department_id }, class: 'form-control', include_blank: false
  .form-group
    = f.label :email
    = f.email_field :email, class: 'form-control', required: true
  = f.submit t('devise.invitations.new.submit_button'), class: 'btn btn-success'
