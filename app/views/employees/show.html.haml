.employees
  .row
    .col-3
      = render 'skills'
    .col-3
      = render 'employee_list'
    .col-6
      .section.last.profile
        .row
          .col-5
            = image_tag @employee.image, size: '200x200'
          .col-7
            %span.link.pointable{'data-target' => '#editModal', 'data-toggle' => 'modal', type: 'button'}
              Edit
            = render 'layouts/modal', { modal_id: 'editModal', modal_title: 'Edit Employee' } do
              .modal-body
                = render template: 'employees/edit'
            |
            = link_to 'Delete', employee_path(@employee), method: :delete

            %h2
              = @employee.name
              .float-right
                = @employee.main_skill
                = role(@employee)

            %h5
              Office:
              = @employee.office

            %p
              Email:
              = @employee.email
              %br
              Phone:
              = @employee.phone
              %br
              Skype:
              = @employee.skype
              %p
                = @employee.description

        %h3 Skills
        %hr
        .row
          .col-12
            - @employee.skills.each do |skill|
              .skill= skill.name

        %h3 Projects
        %hr
        .row
          .col-12
            - @employee.projects.each do |project|
              .row
                .col-4
                  = project.image
                .col-8
                  %h3
                    = project.name
                    - if project.client
                      .float-right
                        %small
                          Client:
                          = project.client
                  %br
                  = "#{project.start_date.strftime('%d/%m/%Y')} - #{project.end_date.strftime('%d/%m/%Y')}"
                  %br
                  = project.description

              .row
                .col-12
                  - project.skills.each do |skill|
                    .skill.ruby= skill.name
              %hr