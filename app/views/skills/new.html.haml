= form_for(Skill.new, url: skills_path, method: :post, remote: true) do |f|
  .form-group
    = f.label :name
    = f.text_field :name, class: 'form-control', required: true
  .form-group
    = f.select :skill_type, Skill.skill_types.map {|k, v| [k.humanize, k]}, prompt: 'Select skill type', class: 'form-control', required: true
    = f.hidden_field :employee_id, value: current_employee.id
  = f.submit 'Create', class: 'btn btn-success'
